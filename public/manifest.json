{
  "manifest_version": 3,
  "name": "2FA Authenticator",
  "version": "1.0",
  "description": "A 2FA Authenticator Extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
